{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es6"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}